<h1>Account::Posts#index</h1>
<p>Find me in app/views/account/posts/index.html.erb</p>

<div>
  <h2 class="text-center">The Posts I Posted</h2>
  
  <table class="table">
    <thead>
      <tr>
        <th>Content</th>
        <th>Group Name</th>
        <th>Last Update</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= simple_format(post.content) %></td>
          <td><%= post.group ? post.group.title : "[no-group]" %></td>
          <td><%= post.updated_at.to_s(:short) %></td>
          <td>
              <%= link_to "Edit", edit_group_post_path(post.group, post), class: "btn btn-info btn-xs" %>
              <%= link_to "Delete", group_post_path(post.group, post), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger btn-xs" %>
          </td>
        </tr>
      <% end %>
      
    </tbody>
    

  </table>


</div>
